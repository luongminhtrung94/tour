<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= tour.title %> - TOPTHAI TRAVEL COMPANY</title>
		<link rel="stylesheet" href="/styles.css" />
	</head>
	<body>
		<%- include('partials/header') %>

		<!-- Tour Detail Banner -->
		<section class="tour-detail-banner">
			<img src="<%= tour.image %>" alt="<%= tour.title %>" class="tour-detail-banner-img">
			<div class="tour-detail-banner-overlay"></div>
			<div class="tour-detail-banner-content">
				<span class="tour-detail-duration-tag"><%= tour.daysRange %></span>
				<h1 class="tour-detail-title"><%= tour.title %></h1>
				<div class="tour-detail-meta">
					<span class="tour-detail-location">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
							<circle cx="12" cy="10" r="3"></circle>
						</svg>
						<%= tour.location %>
					</span>
					<span class="tour-detail-duration-info">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<circle cx="12" cy="12" r="10"></circle>
							<polyline points="12 6 12 12 16 14"></polyline>
						</svg>
						<%= tour.duration %>
					</span>
				</div>
			</div>
		</section>

		<!-- Tour Detail Content -->
		<section class="tour-detail-content">
			<div class="container">
				<!-- Tab Navigation -->
				<div class="tour-tabs">
					<button class="tour-tab active" data-tab="overview">Overview</button>
					<button class="tour-tab" data-tab="itinerary">Itinerary</button>
					<button class="tour-tab" data-tab="cost">Cost</button>
					<button class="tour-tab" data-tab="faq">FAQ</button>
				</div>

				<!-- Tab Content Panels -->
				<div class="tour-tab-panels">
					<!-- Overview Tab -->
					<div class="tour-tab-panel active" id="overview">
						<div class="tour-overview">
							<h2>Tour Overview</h2>
							<p class="tour-overview-text"><%= tour.overview %></p>
							
							<div class="tour-overview-highlights">
								<h3>Highlights</h3>
								<div class="tour-tags-list">
									<% tour.tags.forEach(function(tag) { %>
										<span class="tour-highlight-tag"><%= tag %></span>
									<% }); %>
								</div>
							</div>

							<div class="tour-overview-info">
								<div class="tour-info-box">
									<div class="tour-info-icon">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
											<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
											<line x1="16" y1="2" x2="16" y2="6"></line>
											<line x1="8" y1="2" x2="8" y2="6"></line>
											<line x1="3" y1="10" x2="21" y2="10"></line>
										</svg>
									</div>
									<div class="tour-info-text">
										<span class="tour-info-label">Duration</span>
										<span class="tour-info-value"><%= tour.duration %></span>
									</div>
								</div>
								<div class="tour-info-box">
									<div class="tour-info-icon">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
											<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
											<circle cx="12" cy="10" r="3"></circle>
										</svg>
									</div>
									<div class="tour-info-text">
										<span class="tour-info-label">Location</span>
										<span class="tour-info-value"><%= tour.location %></span>
									</div>
								</div>
							</div>

							<div class="tour-cta">
								<a href="#contact" class="btn btn-primary btn-large">Book This Tour</a>
							</div>
						</div>
					</div>

					<!-- Itinerary Tab -->
					<div class="tour-tab-panel" id="itinerary">
						<div class="tour-itinerary">
							<h2>Day-by-Day Itinerary</h2>
							<div class="itinerary-timeline">
								<% tour.itinerary.forEach(function(day) { %>
									<div class="itinerary-day">
										<div class="itinerary-day-marker">
											<span class="itinerary-day-number">Day <%= day.day %></span>
										</div>
										<div class="itinerary-day-content">
											<h3 class="itinerary-day-title"><%= day.title %></h3>
											<ul class="itinerary-activities">
												<% day.activities.forEach(function(activity) { %>
													<li class="itinerary-activity">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
															<polyline points="9 11 12 14 22 4"></polyline>
															<path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
														</svg>
														<span><%= activity %></span>
													</li>
												<% }); %>
											</ul>
										</div>
									</div>
								<% }); %>
							</div>
						</div>
					</div>

					<!-- Cost Tab -->
					<div class="tour-tab-panel" id="cost">
						<div class="tour-cost">
							<h2>What's Included & Excluded</h2>
							<div class="cost-grid">
								<div class="cost-section cost-includes">
									<h3>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
											<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
											<polyline points="22 4 12 14.01 9 11.01"></polyline>
										</svg>
										Includes
									</h3>
									<ul class="cost-list">
										<% tour.cost.includes.forEach(function(item) { %>
											<li class="cost-item cost-item-included">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
													<polyline points="20 6 9 17 4 12"></polyline>
												</svg>
												<span><%= item %></span>
											</li>
										<% }); %>
									</ul>
								</div>
								<div class="cost-section cost-excludes">
									<h3>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
											<circle cx="12" cy="12" r="10"></circle>
											<line x1="15" y1="9" x2="9" y2="15"></line>
											<line x1="9" y1="9" x2="15" y2="15"></line>
										</svg>
										Excludes
									</h3>
									<ul class="cost-list">
										<% tour.cost.excludes.forEach(function(item) { %>
											<li class="cost-item cost-item-excluded">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
													<line x1="18" y1="6" x2="6" y2="18"></line>
													<line x1="6" y1="6" x2="18" y2="18"></line>
												</svg>
												<span><%= item %></span>
											</li>
										<% }); %>
									</ul>
								</div>
							</div>
						</div>
					</div>

					<!-- FAQ Tab -->
					<div class="tour-tab-panel" id="faq">
						<div class="tour-faq">
							<h2>Frequently Asked Questions</h2>
							<div class="faq-accordion">
								<% tour.faq.forEach(function(item, index) { %>
									<div class="faq-item">
										<button class="faq-question" aria-expanded="false">
											<span><%= item.question %></span>
											<svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
												<polyline points="6 9 12 15 18 9"></polyline>
											</svg>
										</button>
										<div class="faq-answer">
											<p><%= item.answer %></p>
										</div>
									</div>
								<% }); %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<%- include('partials/contact-form') %>

		<%- include('partials/footer') %>

		<script src="/app.js"></script>
	</body>
</html>

