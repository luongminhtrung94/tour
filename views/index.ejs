<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>TOPTHAI TRAVEL COMPANY - Thailand & Vietnam Tours</title>
		<link rel="icon" href="/assets/images/logo.jpg" type="image/x-icon">
		<link rel="stylesheet" href="/styles.css" />
	</head>
	<body>
		<%- include('partials/header') %>

		<img src="/assets/images/thailand-vietnam-banner.jpg" alt="TOPTHAI TRAVEL" class="banner">

		<%- include('partials/about') %>

		<!-- Thailand Tours Section -->
		<section id="thailand-tours" class="section tours thailand-tours">
			<div class="container">
				<h2 class="section-title">Thailand Tour Packages</h2>
				<p class="section-subtitle">
					Experience the Land of Smiles with our carefully curated tour programs
				</p>

				<div class="tours-list">
					<% thailandTours.forEach(function(tour) { %>
						<%- include('partials/tour', { tour: tour }) %>
					<% }); %>
				</div>
			</div>
		</section>

		<!-- Vietnam Tours Section -->
		<section id="vietnam-tours" class="section tours vietnam-tours">
			<div class="container">
				<h2 class="section-title">Vietnam Tour Packages</h2>
				<p class="section-subtitle">
					Discover Vietnam's rich heritage and breathtaking landscapes
				</p>

				<div class="tours-list">
					<% vietnamTours.forEach(function(tour) { %>
						<%- include('partials/tour', { tour: tour }) %>
					<% }); %>
				</div>
			</div>
		</section>

		<%- include('partials/contact-form') %>

		<%- include('partials/footer') %>

		<script src="/app.js"></script>
	</body>
</html>

