<article class="tour-card-horizontal">
    <div class="tour-card-image">
        <img src="<%= tour.image %>" alt="<%= tour.title %>">
        <% if (tour.featured) { %>
            <span class="tour-card-badge">Popular</span>
        <% } %>
    </div>
    <div class="tour-card-content">
        <div class="tour-card-header">
            <h3 class="tour-card-title"><%= tour.title %></h3>
            <div class="tour-card-tags">
                <span class="tour-tag tour-tag-duration"><%= tour.daysRange %></span>
                <% if (tour.tags && tour.tags.length > 0) { %>
                    <% tour.tags.forEach(function(tag) { %>
                        <span class="tour-tag"><%= tag %></span>
                    <% }); %>
                <% } %>
            </div>
        </div>
        <p class="tour-card-description"><%= tour.description %></p>
        <div class="tour-card-meta">
            <div class="tour-card-info">
                <div class="tour-info-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span><%= tour.location %></span>
                </div>
                <div class="tour-info-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span><%= tour.duration %></span>
                </div>
            </div>
            <a href="/tour/<%= tour.id %>" class="btn btn-primary tour-card-btn">View Details</a>
        </div>
    </div>
</article>

